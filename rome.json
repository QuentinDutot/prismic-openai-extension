{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "files": {
    "ignore": ["node_modules", "dist"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "style": {
        "useBlockStatements": "off",
        "useEnumInitializers": "off"
      },
      "suspicious": {
        "noRedundantUseStrict": "off"
      },
      "nursery": {
        "useExhaustiveDependencies": "off",
        "useHookAtTopLevel": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    },
    "globals": ["JSX"]
  }
}
