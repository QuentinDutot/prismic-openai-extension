{
  "version": "1.0",
  "manifest_version": 3,
  "name": "Prismic Extension",
  "permissions": ["tabs", "activeTab", "storage", "scripting"],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.prismic.io/*"],
      "js": ["scripts/content.js"]
    }
  ]
}
